{% extends "post.template" %}

{% block type %}link{% endblock %}

{% block primary_content %}
  <div class="link-target">
    <a href="{URL}" class="link-name" {Target}>{Name}</a>
  </div>
{% endblock %}

{% block secondary_content %}
  {block:Description}
    <div class="link-description">{Description}</div>
  {/block:Description}
{% endblock %}
